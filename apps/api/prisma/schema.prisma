// prisma schema สำหรับตาราง posts โดยคอมเมนต์ภาษาไทย

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// สร้าง enum สำหรับสถานะบทความ
enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// บทบาทผู้ใช้สำหรับการจัดสิทธิ์เบื้องต้น
enum Role {
  USER
  ADMIN
}

// โมเดลโพสต์หลัก
model Post {
  id            String     @id @default(uuid())
  title         String
  slug          String     @unique
  excerpt       String?
  content       String     // อาจเก็บเป็น markdown
  coverImageUrl String?
  tags          String[]   // เก็บเป็น array ของข้อความเพื่อความเรียบง่าย
  status        PostStatus @default(DRAFT)
  publishedAt   DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  // ความสัมพันธ์กับผู้เขียน (ไม่บังคับในตัวอย่าง)
  authorId      String?
  author        User?      @relation("UserToPost", fields: [authorId], references: [id])

  @@index([publishedAt])
  @@index([status])
}

// ผู้ใช้ระบบสำหรับการล็อกอินและกำหนดสิทธิ์
model User {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String
  name          String
  role          Role     @default(USER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  posts         Post[]   @relation("UserToPost")

  @@index([email])
}